    <property name="headerText" display-name-key="Title Text" description-key="Text to appear in header" usage="input" of-type="SingleLine.Text" required="true" default-value="Header" />
    <property name="subHeaderStyleText" display-name-key="Sub Header Style Text" description-key="Style that will be added to the sub header." usage="bound" of-type="SingleLine.Text" required="false" default-value="Header" />
    <property name="subHeaderText" display-name-key="Sub Header Text" description-key="Text to appear under the header, usually used for description or guidance text" usage="input" of-type="SingleLine.Text" required="false" default-value="Header" />
